server {
	listen 80 default_server;
	server_name agama;

	location / {
		uwsgi_pass localhost:5000;
		include uwsgi_params;
	}

	location /prometheus {
		proxy_pass http://timofeimih-2:9090;
	}

	location /grafana {
		proxy_set_header Host $http_host;
		proxy_pass http://timofeimih-1:3000;
	}
}

